<p style="color: green"><%= notice %></p>

<%= render @movie %>
<div class="container">
  <div class="d-flex align-items-center">
    <%= link_to "Edit this movie", edit_movie_path(@movie), class: "btn btn-sm btn-success m-2" %>

    <%= button_to "Delete",
                  movie_path(@movie),
                  method: :delete,
                  form: { data: { turbo_confirm: "Delete this movie?" } },
                  class: "btn btn-sm btn-danger" %>
  </div>
</div>