  <div class="card shadow-sm mx-auto" style="max-width: 600px";>
    <div class="card-body">
      <%= render "form", movie: @movie %>
    </div>
  </div>

  <div class="text-center mt-4">
    <%= link_to "Cancel", movies_path, class: "btn btn-secondary" %>
  </div>
</div>