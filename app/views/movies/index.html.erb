<nav class="navbar fixed-top navbar-light bg-light">
  <div class="container-fluid">
    <a class="navbar-brand" href="/">MovieLog</a>
    <%= form_with url: search_path, method: :get, local: true, class: "d-flex" do %>
      <%= text_field_tag :q, params[:q], class: "form-control me-2", placeholder: "Search movies..." %>
      <%= submit_tag "Search", class: "btn btn-sm btn-outline-primary" %>
    <% end %>
  </div>
</nav>

<div class="container py-5 my-5">
  <h1 class="h1 mb-3 text-center">My Library</h1>

  <% if @movies.any? %>
    <div class="row row-cols-2 row-cols-md-3 row-cols-lg-4 g-2">
      <% @movies.each do |m| %>
        <div class="col d-flex justify-content-center">
          <%= link_to movie_path(m), class: "text-decoration-none text-reset" do %>
            <div class="card text-center shadow-sm h-100" style="width: 14rem;">
              <% if m.poster_path.present? %>
                <img src="https://image.tmdb.org/t/p/w300<%= m.poster_path %>"
                     class="img-fluid mx-auto d-block rounded-top"
                     alt="Poster for <%= m.title %>">
              <% end %>
              <div class="card-body p-2">
                <h6 class="card-title mb-2">
                  <%= m.title %>
                  <small class="text-muted"><%= m.release_year %></small>
                </h6>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  <% else %>
    <!-- library empty state -->
    <div class="text-center text-muted py-5">
      <p>Your library is currently empty</p>
      <p>Try searching for movies</p>
    </div>
  <% end %>
</div>