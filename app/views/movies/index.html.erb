<nav class="navbar fixed-top navbar-light bg-light">
  <div class="container-fluid">
    <a class="navbar-brand" href="/">MovieLog</a>
    <%= form_with url: search_path, method: :get, local: true, class: "d-flex" do %>
      <%= text_field_tag :q, params[:q], class: "form-control me-2", placeholder: "Search movies..." %>
      <%= submit_tag "Search", class: "btn btn-sm btn-outline-primary" %>
    <% end %>
  </div>
</nav>

<div class="container py-4 my-5">
  <h1 class="h1 mb-3">My Library</h1>

  <% if @movies.any? %>
    <div class="row row-cols-2 row-cols-md-3 row-cols-lg-4 g-2">
      <% @movies.each do |m| %>
        <div class="col d-flex justify-content-center">
          <div class="card text-center shadow-sm" style="width: 14rem;">
            <% if m.poster_path.present? %>
              <img src="https://image.tmdb.org/t/p/original<%= m.poster_path %>" class="img-fluid mx-auto d-block rounded">
            <% end %>
            <div class="card-body p-2">
              <h6 class="card-title mb-2">
                <%= m.title %>
                <small class="text-muted"><%= m.release_year %></small>
              </h6>
              <div>
                <%= link_to "Show", movie_path(m), class: "btn btn-sm btn-primary m-2" %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="text-center text-muted py-5">
      <p>Your library is empty.</p>
      <%= link_to "Search for movies", search_path, class: "btn btn-success" %>
    </div>
  <% end %>
</div>